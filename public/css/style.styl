r16by9h(height)
  height: height
  width: height * (3/4)

r16by9w(width)
  height: width * (4/3)
  width: width

*
  margin 0
  padding 0
  box-sizing border-box
  font 16px/20px 'Roboto', Helvetica, Arial, sans-serif

h1
  font-size 2em
  font-weight 700
  margin-top 1em
  margin-left -.4em

p, address
  margin 10px

body
  width 100vw
  height 100vh
  position relative
  display flex
  align-items flex-start

main
  margin-left auto
  max-width 1200px
  width calc(1200px - 21em)

.byline
  max-width 1200px
  width 20em
  float right 
  border 1px solid #ddd
  display flex
  flex-direction column
  margin-right auto
  margin-left .7em

.byline img
  margin 10px
  r16by9h 200px

.slug
  color: #000
  opacity 0
  text-decoration none
  float left
  transition opacity 80ms cubic-bezier(0, 0, .3, 1)

.slug:hover, .slug:focus
  opacity 1

h1 .slug
  font-size: 1em

@media screen and (max-width: 1080px)
  main, .byline
    margin 0 auto 0
    width 90vw
  
  body
    flex-direction: column
  
  .byline
    flex-direction: row

@media screen and (max-width: 425px)
  *
    font-size 12px
    line-height 16px

@media screen and (max-width: 375px)
  .byline
    flex-direction column
